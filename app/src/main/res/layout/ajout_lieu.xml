<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fb030303" tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:id="@+id/frag1_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/frag1_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    <Button
        android:id="@+id/buttonRefresh"
        android:text="Rechercher les réseaux à proximité"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"></Button>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="66dp"
        android:hint="Entrez le nom du lieu"
        android:id="@+id/lieu"
        android:singleLine = "true"/>

    <ListView android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clipToPadding="false"
        android:divider="#cc35b7ec"
        android:dividerHeight="7dp"
        android:layout_weight="1"
        android:drawSelectorOnTop="false"
        android:background="@android:color/background_dark"
        android:listSelector="@android:color/darker_gray" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="66dp"
        android:id="@+id/buttonAjout"
        android:text="Ajouter un wifi"
        android:textColor="#FFFFFF"
        android:background="#ef3f3f3f"
        />

</LinearLayout>
</LinearLayout>